{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "sourceMap": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "target": "es2022",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "baseUrl": "./",
        "skipLibCheck": true,
        "paths": {
            "react": ["./node_modules/preact/compat/"],
            "react-dom": ["./node_modules/preact/compat/"]
        },
        "noEmit": true,
        "types": ["chrome", "firefox-webext-browser"],
        "typeRoots": [
            "node_modules/@types",
            "./types",
            "node_modules/cypress/types"
        ]
    },
    "include": [
        "./src/**/*.jsx",
        "./src/**/*.js",
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./types"
    ]
}
