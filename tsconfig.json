{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "sourceMap": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "es2022",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "baseUrl": "./",
        "skipLibCheck": true,
        "paths": {
            "react": ["./node_modules/preact/compat/"],
            "react-dom": ["./node_modules/preact/compat/"]
        },
        "typeRoots": ["node_modules/@types", "node_modules/cypress/types", "./types", "node_modules/web-ext-types/global"]
    },
    "include": [
        "./src/**/*.jsx",
        "./src/**/*.js",
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./types",
        "node_modules/web-ext-types/global",
        "cypress/component/ConfirmDialog.spec.tsx"
    ]
}
