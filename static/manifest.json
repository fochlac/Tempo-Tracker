{
    "name": "Tempo-Tracker",
    "version": "3.3.5",
    "manifest_version": 3,
    "description": "Timetracker with synchronization to the Jira Tempo-Plugin.",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "./sw.js"
    },
    "permissions": [
        "alarms",
        "contextMenus",
        "scripting"
    ],
    "commands": {
        "stop_tracking": {
            "suggested_key": {
                "default": "Ctrl+Shift+0"
            },
            "description": "Stop Tracking",
            "global": true
        },
        "start_tracking_1": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description": "Start Tracking for Issue 1",
            "global": true
        },
        "start_tracking_2": {
            "suggested_key": {
                "default": "Ctrl+Shift+2"
            },
            "description": "Start Tracking for Issue 2",
            "global": true
        },
        "start_tracking_3": {
            "suggested_key": {
                "default": "Ctrl+Shift+3"
            },
            "description": "Start Tracking for Issue 3",
            "global": true
        }
    },
    "optional_host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_icon": {
            "19": "icon19.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_popup": "popup.html"
    }
}
