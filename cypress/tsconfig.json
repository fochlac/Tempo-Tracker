{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "baseUrl": "..",
        "moduleResolution": "node",
        "paths": {
            "react": ["./node_modules/preact/compat/"],
            "react-dom": ["./node_modules/preact/compat/"],
            "src/*": ["./src/*"]
        },
        "types": ["node", "chrome", "firefox-webext-browser"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "typeRoots": [
            "../node_modules/@types",
            "../node_modules/cypress",
            "../types"
        ]
    },
    "include": [
        "./fixtures/*.ts",
        "./support/*.ts",
        "./support/*.tsx",
        "./component/*.tsx",
        "./e2e/*.ts",
        "../types/**/*.d.ts"
    ],
    "exclude": ["node_modules", "./support/src/**/*"]
}
